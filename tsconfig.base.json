{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@buildmotion/actions": ["libs/actions/src/index.ts"],
      "@buildmotion/common": ["libs/common/src/index.ts"],
      "@buildmotion/configuration": ["libs/configuration/src/index.ts"],
      "@buildmotion/core": ["libs/core/src/index.ts"],
      "@buildmotion/error-handling": ["libs/error-handling/src/index.ts"],
      "@buildmotion/foundation": ["libs/foundation/src/index.ts"],
      "@buildmotion/http-service": ["libs/http-service/src/index.ts"],
      "@buildmotion/logging": ["libs/logging/src/index.ts"],
      "@buildmotion/notifications": ["libs/notifications/src/index.ts"],
      "@buildmotion/rules-engine": ["libs/rules-engine/src/index.ts"],
      "@buildmotion/validation": ["libs/validation/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
